{

    "manifest_version": 3,
    "name": "ChatboxNotif",
    "version": "2.0",
  
    "description": "Chatbox FA : Notifications sonores et nouveaux messages.",
  
    "icons": {
      "48": "icons/chatboxNotif-icon.svg"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.ashes-arise.forumactif.com/chatbox/*"],
        "js": ["script/chatboxNotif.js"]
      }
    ],

    "browser_specific_settings": {
      "gecko": {
        "id": "chatboxnotif@gmail.com",
        "strict_min_version": "48.0"
      }
    }
    
  
  }
